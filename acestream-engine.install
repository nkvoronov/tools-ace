post_install() {
  if ! getent passwd acestream &> /dev/null; then
    useradd -u 156 -g video -m -s /usr/bin/nologin acestream
  fi
  ln -sf /usr/share/acestream/start-engine /usr/bin/acestreamengine
}

post_upgrade() {
  post_install
}

post_remove() {
  if getent passwd acestream &>/dev/null; then
    userdel acestream
  fi
  rm -f /usr/bin/acestreamengine
}
